{
  "name": "InertiaCTF",
  "version": "1.0.0",
  "description": "A Capture The Flag hosting platform",
  "main": "server.js",
  "author": "Puneet Rai",
  "license": "MIT",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "client-install": "yarn install --prefix client",
    "client": "cd client && export PORT=8010 && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-post-build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.15",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}
